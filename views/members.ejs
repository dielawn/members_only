<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Members Message Board</title>
</head>
<body>
    <h1>Welcome <%= user.username %></h1>

    <!-- list member messages -->
    <% messages.forEach(message => { %>
        <div>
            <p><strong>Author:</strong> <%= message.author.username %></p>
            <p><strong>Message:</strong> <%= message.message %></p>
            <p><strong>Timestamp:</strong> <%= message.createdAt %></p>
            <p><strong>Likes:</strong> <%= message.likes %></p>
            <p><strong>Replies:</strong> <%= message.replies.length %></p>
        </div>
        <hr>
    <% }); %>   

    <form method="POST" action="/members">
        <label for="messageInput">New Message: </label>
        <textarea name="messageInput" id="messageInput"></textarea>
        <button type="submit">Post Member Message</button>
    </form>
</body>
</html>
